{
  "name": "uby-agendamentos",
  "version": "6.0.0",
  "description": "Sistema profissional de gest√£o de agendamentos desenvolvido com Electron",
  "main": "app/main.js",
  "author": "L34NDR0-DEV",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "publish": "electron-builder --publish=always",
    "clean": "rimraf dist build"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.0.0",
    "electron-log": "^5.0.0",
    "express": "^4.18.0",
    "socket.io": "^4.7.0",
    "sqlite3": "^5.1.0",
    "uuid": "^10.0.0"
  },
  "build": {
    "appId": "com.uby.agendamentos",
    "productName": "UBY Agendamentos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "L34NDR0-DEV",
      "repo": "uby-agendamentos"
    }
  }
}